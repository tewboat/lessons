<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/habits_list_item_style"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/habit_list_item_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/habits_list_item_button_style"
                android:layout_marginRight="12dp"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/habits_list_item_button_style"
                android:layout_marginRight="12dp"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/habits_list_item_button_style"
                android:layout_marginRight="12dp"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/habits_list_item_button_style"
                android:layout_marginRight="12dp"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/habits_list_item_button_style"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/habits_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="habit_name"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>
</LinearLayout>